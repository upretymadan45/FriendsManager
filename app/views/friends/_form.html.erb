<div class="row">
  <div class="col-sm-2 col-sm-offset-4">
    <h2>New Friend!</h2>
  </div>
</div>

<%= form_for @friend, class: 'form-horizontal' do|f| %>

     <div class = "form">
        <div class = "row">
        <div class = "col-sm-2 col-sm-offset-4">
            <%= f.label :first_name %>
        </div>
        </div>
        <div class = "row">
        <div class = "col-sm-3 col-sm-offset-4">
            <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
        </div>
        </div>
    </div>

    <div class = "row">
      <div class = "col-sm-2 col-sm-offset-4">
        <%= f.label :last_name %>
      </div>
    </div>
    <div class = "row">
      <div class = "col-sm-3 col-sm-offset-4">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
    <br/>

    <div class="row">
        <div class = "col-sm-2 col-sm-offset-4">
            <%= f.submit "Save", class: "btn btn-primary" %>
        </div>
    </div>
<% end %>